<!DOCTYPE html>
<html>
  <head>
    <%- include ../partials/head %>
  </head>
  <body>
    <%- include ../partials/nav %>
    <% if (user) {%>
      <h2>New Spots to Go To!</h2>
      <table>
        <tr>
          <th>Name</th>
          <th>Cuisine</th>
          <th>Neighborhood</th>
          <th>Website</th>
        </tr>
        <% data.forEach(restaurant => { %>
          <% if (!restaurant.visited) {  %>
            <tr>
              <%- include _show %>
              <td><form class="" action="/restaurants/<%= restaurant.rest_id %>?_method=PUT" method="POST">
                <label for="submit"></label>
                <button id="submit" type="submit">I went!</button>
              </form></td>
              <td><form class="" action="/restaurants/<%= restaurant.rest_id %>?_method=DELETE" method="POST">
                <label for="submit"></label>
                <button id="submit" type="submit">Remove</button>
              </form></td>
            </tr>
          <% } %>
        <% }); %>
      </table>
    <% } %>
    <%- include ../partials/footer %>
  </body>
</html>
